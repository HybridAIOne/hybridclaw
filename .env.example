# Discord
DISCORD_TOKEN=                    # Optional (required only for Discord integration)
DISCORD_PREFIX=!claw              # Optional (default: mention-only)

# HybridAI
HYBRIDAI_API_KEY=                 # Required
HYBRIDAI_BASE_URL=https://hybridai.one
HYBRIDAI_MODEL=gpt-5-nano
HYBRIDAI_CHATBOT_ID=              # Default chatbot (overridable per channel)
HYBRIDAI_ENABLE_RAG=true

# Container
CONTAINER_IMAGE=hybridclaw-agent
CONTAINER_MEMORY=512m
CONTAINER_CPUS=1
CONTAINER_TIMEOUT=60000

# Ops
HEALTH_HOST=127.0.0.1            # Bind address for health/web/API server
HEALTH_PORT=9090                  # Health/metrics HTTP endpoint
WEB_API_TOKEN=                    # Optional bearer token required by gateway /api/* endpoints
GATEWAY_BASE_URL=http://127.0.0.1:9090  # Adapter target (tui/external clients -> gateway)
GATEWAY_API_TOKEN=                # Optional token used by clients for gateway API (defaults to WEB_API_TOKEN)
LOG_LEVEL=info                    # pino log level
DB_PATH=data/hybridclaw.db

# Session compaction / memory flush
SESSION_COMPACTION_ENABLED=true
SESSION_COMPACTION_THRESHOLD=120
SESSION_COMPACTION_KEEP_RECENT=40
SESSION_COMPACTION_SUMMARY_MAX_CHARS=8000
PRE_COMPACTION_MEMORY_FLUSH_ENABLED=true
PRE_COMPACTION_MEMORY_FLUSH_MAX_MESSAGES=80
PRE_COMPACTION_MEMORY_FLUSH_MAX_CHARS=24000
